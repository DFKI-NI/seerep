{
    "image": "seerep/dev-image:latest",
    "name": "seerep-dev",
    "extensions": [
        "ms-vscode.cpptools",
        "betwo.b2-catkin-tools",
        "compulim.compulim-vscode-closetag",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "ms-azuretools.vscode-docker",
        "mhutchie.git-graph",
        "ms-iot.vscode-ros",
        "zxh404.vscode-proto3",
        "vscode-icons-team.vscode-icons"
    ],
    "containerUser": "docker",
    "mounts": ["source=vscode-extensions,target=/home/docker/.vscode-server,type=volume"],
    "workspaceMount": "source=seerep-ws,target=/home/docker/workspace/src,type=volume",
    "workspaceFolder": "/home/docker/workspace",
    "runArgs": [ "--network=host" ],
    "containerEnv": {
        "ROS_HOSTNAME": "$(hostname)"
    },
    "postCreateCommand": "{git -C ./seerep pull || git clone git@github.com:agri-gaia/seerep.git} && ./seerep/.devcontainer/postCreateCommand.sh"
}
